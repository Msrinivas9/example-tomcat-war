pipeline {
    agent any
    stages {
        stage("code quality"){
            agent { docker 'maven:3-alpine' } 
            	steps {
               		sh '''
                    echo code quality step
                    '''
            }
        }
        stage('code build and publish') {
         	agent { docker 'maven:3-alpine' } 
            	steps {
               		sh 'mvn clean package'
    rtUpload (
    serverId: 'artifactory',
    spec: '''{
          "files": [
            {
              "pattern": "**/SimpleTomcatWebApp.war",
              "target": "project/"
            }
         ]
    }''',
    buildName: 'project',
    buildNumber: '1'
)
            }
        }
        
                    stage('deployment') {
                        agent any
            steps {
            sh'''
            pwd
            ls
            //cd target/
            //cp SimpleTomcatWebApp.war /Library/Tomcat/webapps
            echo "webapps items"
            ls /Library/Tomcat/webapps
            '''
                }
            }
          
    }
}
