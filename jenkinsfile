pipeline {
    agent slave
    stages {
        stage("code quality"){
            agent { docker 'maven:3-alpine' } 
            	steps {
               		sh '''
                    echo code quality step
                    '''
            }
        }
        stage('code build and publish') {
         	agent { docker 'maven:3-alpine' } 
            	steps {
               		sh 'mvn clean package'
    rtUpload (
    serverId: 'artifactory',
    spec: '''{
          "files": [
            {
              "pattern": "**/SimpleTomcatWebApp.war",
              "target": "project/"
            }
         ]
    }''',
    buildName: 'project',
    buildNumber: '1'
)
            }
        }
        
                    stage('deployment') {
                        agent slave
            steps {
            sh'''
            pwd
            ls
            #cd target/
            #cp SimpleTomcatWebApp.war /Library/Tomcat/webapps
            curl -uadmin:AP2NLHDGC9Wgss6hzjDbt54MoXk -O "http://54.88.251.14:8081/artifactory/project/SimpleTomcatWebApp.war"
            echo "webapps items"
            ls /opt/tomcat/webapps
            cp SimpleTomcatWebApp.war /opt/tomcat/webapps/SimpleTomcatWebApp.war
            '''
                }
            }
          
    }
}
