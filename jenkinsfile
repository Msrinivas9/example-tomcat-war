pipeline {
    agent {label 'slave_tomcat'}
    stages {
        stage("code quality"){
            agent { docker 'maven:3-alpine' } 
            	steps {
               		sh '''
                    echo code quality step
                    '''
            }
        }
        stage('code build and publish') {
         	agent { docker 'maven:3-alpine' } 
            	steps {
               		sh 'mvn clean package'
    rtUpload (
    serverId: 'artifactory',
    spec: '''{
          "files": [
            {
              "pattern": "**/SimpleTomcatWebApp.war",
              "target": "tomcat_project/"
            }
         ]
    }''',
    buildName: 'tomcat_project',
    buildNumber: '1'
)
            }
        }
        
                    stage('deployment') {
                        agent {label 'slave_tomcat'}
            steps {
            sh'''
            pwd
            ls
            echo "files inside target"
            ls target/
            #cp SimpleTomcatWebApp.war /Library/Tomcat/webapps
            curl -uadmin:AP9W2xVgBbLe5TrMWBiwdR83bMj -O "http://3.88.12.161:8081/artifactory/tomcat_project/<TARGET_FILE_PATH>"
            echo "webapps items"
            ls /opt/tomcat/webapps
            cp target/SimpleTomcatWebApp.war /opt/tomcat/webapps/SimpleTomcatWebApp.war
            '''
                }
            }
          
    }
}
