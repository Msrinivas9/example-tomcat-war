pipeline {
    agent any
    stages {
        stage("code quality"){
            agent { docker 'maven:3-alpine' } 
            	steps {
               		sh '''
                    echo code quality step
                    '''
            }
        }
        stage('code build and publish') {
         	agent { docker 'maven:3-alpine' } 
            	steps {
               		sh 'mvn clean package'
                    //sh 'sudo apk --no-cache add curl'
                    //sh 'curl -uhemanth:AP7mUBBRLiPx5iiWXv6eTnijox1 -T target/SimpleTomcatWebApp.war "http://localhost:8081/artifactory/project/SimpleTomcatWebApp.war"'
            }
        }
                    stage('deployment') {
                        agent any
            steps {
            sh'''
            pwd
            ls -lrt target/
            cp target/SimpleTomcatWebApp.war /Library/Tomcat/webapps
            '''
                }
            }
    }
}
