pipeline {
    agent any
    stages {
        stage("code quality"){
            agent { docker 'maven:3-alpine' } 
            	steps {
               		sh '''
                    echo code quality step
                    '''
            }
        }
        stage('code build and publish') {
         	agent { docker 'maven:3-alpine' } 
            	steps {
               		sh 'mvn clean package'
                    sh 'ls'
                    sh 'curl -uhemanth:AP7mUBBRLiPx5iiWXv6eTnijox1 -T **/SimpleTomcatWebApp.war "http://localhost:8081/artifactory/project/SimpleTomcatWebApp.war"'
            }
        }
                    stage('deployment') {
                        agent any
            steps {
            sh'''
            pwd
            ls -lrt
            curl -uhemanth:AP7mUBBRLiPx5iiWXv6eTnijox1 -O "http://localhost:8081/artifactory/project/SimpleTomcatWebApp.war"
            cp SimpleTomcatWebApp.war /Library/Tomcat/webapps
            rm SimpleTomcatWebApp.war
            '''
                }
            }
    }
}
